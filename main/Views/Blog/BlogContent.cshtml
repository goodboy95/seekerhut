@{
    Layout = "_BlogLayout";
}
<script src="~/lib/jscookie.js"></script>
<script src="~/js/blog/content.js"></script>
<link rel="stylesheet" href="~/css/blog/content.css" />
<title>探索日志</title>

<div>
    <p id="blogID" hidden>@ViewBag.BlogID</p>
    <p id="authorID" hidden>@ViewBag.AuthorID</p>
    <h1 id="title">@ViewBag.BlogTitle</h1>
    <div id="authorData">
        <span>作者：</span><span id="author">@ViewBag.BlogAuthor</span>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <span>发布时间：</span><span id="createTime">@ViewBag.CreateTime</span>
    </div>
    <br />
    <div>
        <div id="content" contenteditable="false" style="">@Html.Raw(ViewBag.BlogContent)</div>
    </div>
</div>
<div>
    <div id="token">
        @Html.AntiForgeryToken()
    </div>
    <p>添加回复：</p>
    <div>
        <textarea id="replyText"></textarea>
        <button id="replySubmit" class="layui-btn">发送</button>
    </div>
    <p>回复：</p>
    <div id="replyList">
        <ol>
            <li v-for="reply in replies">
                <p>{{ reply.author }} 说：</p>
                <p>{{ reply.content }}</p>
            </li>
        </ol>
    </div>
</div>